{
  "schemaVersion": 1,
  "id": "template-trik",
  "name": "Template Test Trik",
  "description": "A test trik for template mode",
  "version": "1.0.0",
  "actions": {
    "search": {
      "description": "Search for items",
      "responseMode": "template",
      "inputSchema": {
        "type": "object",
        "properties": {
          "topic": { "type": "string" }
        }
      },
      "agentDataSchema": {
        "type": "object",
        "properties": {
          "count": { "type": "integer" },
          "template": { "type": "string", "enum": ["success", "empty"] }
        },
        "required": ["count", "template"]
      },
      "responseTemplates": {
        "success": { "text": "Found {{count}} results" },
        "empty": { "text": "No results found" }
      }
    },
    "badOutput": {
      "description": "Action that returns invalid output",
      "responseMode": "template",
      "inputSchema": { "type": "object" },
      "agentDataSchema": {
        "type": "object",
        "properties": {
          "count": { "type": "integer" }
        },
        "required": ["count"]
      },
      "responseTemplates": {
        "success": { "text": "Count: {{count}}" }
      }
    }
  },
  "capabilities": {
    "tools": []
  },
  "limits": {
    "maxExecutionTimeMs": 30000
  },
  "entry": {
    "module": "./graph.js",
    "export": "graph"
  }
}
