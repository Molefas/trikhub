{
  "id": "@demo/hello-py",
  "name": "Hello Python Trik",
  "description": "A simple Python trik demonstrating native Python execution",
  "version": "1.0.0",
  "entry": {
    "module": "./graph.py",
    "export": "graph",
    "runtime": "python"
  },
  "actions": {
    "greet": {
      "description": "Generate a greeting message from Python",
      "responseMode": "template",
      "inputSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name to greet"
          }
        },
        "required": ["name"]
      },
      "agentDataSchema": {
        "type": "object",
        "properties": {
          "template": {
            "type": "string",
            "enum": ["success", "error"]
          },
          "message": {
            "type": "string"
          },
          "language": {
            "type": "string"
          }
        }
      },
      "responseTemplates": {
        "success": {
          "text": "Python says: {{message}} (powered by {{language}})"
        },
        "error": {
          "text": "Error: {{message}}"
        }
      }
    },
    "reverse": {
      "description": "Reverse a string",
      "responseMode": "template",
      "inputSchema": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "Text to reverse"
          }
        },
        "required": ["text"]
      },
      "agentDataSchema": {
        "type": "object",
        "properties": {
          "template": {
            "type": "string",
            "enum": ["result", "error"]
          },
          "original": {
            "type": "string"
          },
          "reversed": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "responseTemplates": {
        "result": {
          "text": "Reversed '{{original}}' to '{{reversed}}'"
        },
        "error": {
          "text": "Error: {{message}}"
        }
      }
    }
  },
  "capabilities": {
    "tools": [],
    "canRequestClarification": false
  },
  "limits": {
    "maxExecutionTimeMs": 30000,
    "maxLlmCalls": 0,
    "maxToolCalls": 0
  }
}
