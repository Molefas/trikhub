{
  "name": "@trikhub/mcp",
  "version": "0.1.0",
  "description": "MCP server for AI-assisted trik authoring",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "trikhub-mcp": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ai",
    "mcp",
    "model-context-protocol",
    "trik",
    "trikhub",
    "agent",
    "authoring",
    "typescript"
  ],
  "author": "Molefas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Molefas/trikhub.git",
    "directory": "packages/js/mcp"
  },
  "bugs": {
    "url": "https://github.com/Molefas/trikhub/issues"
  },
  "homepage": "https://github.com/Molefas/trikhub/tree/main/packages/js/mcp#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "node --import tsx src/index.ts",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@trikhub/manifest": "workspace:*",
    "@trikhub/linter": "workspace:*",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "tsx": "^4.19.0"
  }
}
